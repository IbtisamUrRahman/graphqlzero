{
  "version": 2,
  "build": {
    "env": {
      "JSON_PLACEHOLDER_URL": "@json_placeholder_url",
      "GOOGLE_ANALYTICS_TRACKING_CODE": "@google_analytics_tracking_code",
      "SENTRY_DSN": "@sentry_dsn"
    }
  },
  "env": {
    "JSON_PLACEHOLDER_URL": "@json_placeholder_url",
    "GOOGLE_ANALYTICS_TRACKING_CODE": "@google_analytics_tracking_code",
    "SENTRY_DSN": "@sentry_dsn"
  },
  "builds": [
    { "src": "apps/api/dist/**/*.js", "use": "@now/node" },
    { "src": "apps/web/package.json", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/api", "dest": "/apps/api/dist" },
    { "src": "/(.*)", "dest": "/apps/web/$1" }
  ]
}
